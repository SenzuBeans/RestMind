<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="129dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/phone_footage"
        android:layout_alignEnd="@+id/phone_footage"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="140dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="140dp"
        android:text="WELCOME"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/phone_footage"
        android:layout_width="wrap_content"
        android:layout_height="750dp"
        android:layout_marginTop="160dp"
        app:srcCompat="@drawable/phone" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/phone_footage"
        android:layout_alignTop="@+id/phone_footage"
        android:layout_alignBottom="@+id/phone_footage"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="341dp"
        android:src="@drawable/image_logo" />


    <TextView
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phone_footage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="107dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="141dp"
        android:fontFamily=""
        android:paddingLeft="10dp"
        android:text="Restmind, we're getting ready for you"
        android:textSize="25dp" />

</RelativeLayout>