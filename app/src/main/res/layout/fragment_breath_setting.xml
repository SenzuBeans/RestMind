<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.breath.BreathSettingFragment"
    android:background="@drawable/breathe_set_bg">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inhale"
            android:textSize="20dp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/breathInhaleSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_indicator_color="#00FFFFFF"
            app:isb_indicator_text_color="@color/colorCustom04"
            app:isb_indicator_text_size="30dp"
            app:isb_max="10"
            app:isb_min="1"
            app:isb_only_thumb_draggable="false"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/colorCustom02"
            app:isb_thumb_size="20dp"
            app:isb_tick_marks_color="@color/colorCustom04"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_texts_color="#252525"
            app:isb_tick_texts_size="15sp"
            app:isb_ticks_count="10"
            app:isb_track_background_size="10dp"
            app:isb_track_progress_color="@color/grey_500"
            app:isb_track_progress_size="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Hold"
            android:textSize="20dp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/breathHoldSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_indicator_color="#00FFFFFF"
            app:isb_indicator_text_color="@color/colorCustom04"
            app:isb_indicator_text_size="30dp"
            app:isb_max="5"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/colorCustom02"
            app:isb_thumb_size="20dp"
            app:isb_tick_marks_color="@color/colorCustom04"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_texts_color="#252525"
            app:isb_tick_texts_size="15sp"
            app:isb_ticks_count="6"
            app:isb_track_background_size="10dp"
            app:isb_track_progress_color="@color/grey_500"
            app:isb_track_progress_size="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_margin="3dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exhale"
            android:textSize="20dp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/breathExhaleSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_indicator_color="#00FFFFFF"
            app:isb_indicator_text_color="@color/colorCustom04"
            app:isb_indicator_text_size="30dp"
            app:isb_max="10"
            app:isb_min="1"
            app:isb_only_thumb_draggable="false"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/colorCustom02"
            app:isb_thumb_size="20dp"
            app:isb_tick_marks_color="@color/colorCustom04"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_texts_color="#252525"
            app:isb_tick_texts_size="15sp"
            app:isb_ticks_count="10"
            app:isb_track_background_size="10dp"
            app:isb_track_progress_color="@color/grey_500"
            app:isb_track_progress_size="4dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <io.github.deweyreed.scrollhmspicker.ScrollHmsPicker
            android:id="@+id/timePicker"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            app:shp_show_seconds="false"
            app:shp_auto_step="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/breathSettingCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="12dp"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/breathSettingSetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's breathe"
            android:textSize="12dp"
            android:layout_weight="0.5"/>
    </LinearLayout>


</LinearLayout>