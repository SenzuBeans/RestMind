<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/btn_rounded7"
    android:orientation="vertical"
    tools:context=".ui.breath.BreathSettingFragment">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inhale"
            android:textSize="20dp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/breathInhaleSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_indicator_color="#00FFFFFF"
            app:isb_indicator_text_color="@color/colorCustom04"
            app:isb_indicator_text_size="30dp"
            app:isb_max="10"
            app:isb_min="1"
            app:isb_only_thumb_draggable="false"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="#54D8D8"
            app:isb_thumb_size="20dp"
            app:isb_tick_marks_color="#A1E8E8"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_texts_color="#6B6A6A"
            app:isb_tick_texts_size="15sp"
            app:isb_ticks_count="10"
            app:isb_track_background_size="10dp"
            app:isb_track_progress_color="@color/grey_500"
            app:isb_track_progress_size="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Hold"
            android:textSize="20dp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/breathHoldSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_indicator_color="#00FFFFFF"
            app:isb_indicator_text_color="@color/colorCustom04"
            app:isb_indicator_text_size="30dp"
            app:isb_max="5"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="#54D8D8"
            app:isb_thumb_size="20dp"
            app:isb_tick_marks_color="#A1E8E8"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_texts_color="#6B6A6A"
            app:isb_tick_texts_size="15sp"
            app:isb_ticks_count="6"
            app:isb_track_background_size="10dp"
            app:isb_track_progress_color="@color/grey_500"
            app:isb_track_progress_size="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exhale"
            android:textSize="20dp" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/breathExhaleSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_indicator_color="#00FFFFFF"
            app:isb_indicator_text_color="@color/colorCustom04"
            app:isb_indicator_text_size="30dp"
            app:isb_max="10"
            app:isb_min="1"
            app:isb_only_thumb_draggable="false"
            app:isb_seek_smoothly="true"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="#54D8D8"
            app:isb_thumb_size="20dp"
            app:isb_tick_marks_color="#A1E8E8"
            app:isb_tick_marks_size="13dp"
            app:isb_tick_texts_color="#6B6A6A"
            app:isb_tick_texts_size="15sp"
            app:isb_ticks_count="10"
            app:isb_track_background_size="10dp"
            app:isb_track_progress_color="@color/grey_500"
            app:isb_track_progress_size="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded7"
            android:gravity="center"
            android:orientation="vertical">

            <io.github.deweyreed.scrollhmspicker.ScrollHmsPicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                app:shp_auto_step="true"
                app:shp_normal_color="#D84B4A4A"
                app:shp_selected_color="#FFF"
                app:shp_show_seconds="false"
                app:shp_minutes="5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/breathSongSelectRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/breathSettingSetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.1"
            android:background="@drawable/btn_rounded6"
            android:text="Let's breathe"
            android:textColor="#3F3F3F"
            android:textSize="15dp" />

        <Button
            android:id="@+id/breathSettingCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.1"
            android:background="@drawable/btn_rounded6"
            android:text="Cancel"
            android:textColor="#3F3F3F"
            android:textSize="15dp" />


    </LinearLayout>


</LinearLayout>