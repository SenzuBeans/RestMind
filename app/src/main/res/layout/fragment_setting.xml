<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A101A6">

    <FrameLayout
        android:id="@+id/settingContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/settingMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:gravity="center"
            android:text="Hi!.."
            android:textSize="30dp"
            android:textColor="#FFF"
            />

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="User Test"
            android:textSize="30dp"
            android:textColor="#FFF"/>

        <ImageView
            android:id="@+id/imageProfileView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/user_profile_image"
            tools:srcCompat="@tools:sample/avatars[6]" />

            <Button
                android:id="@+id/profileBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_rounded3"
                android:text="Profile"
                android:textColor="#fff"
                android:layout_marginBottom="10dp"
                />

        <Button
            android:id="@+id/changePasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded3"
            android:text="Change Password"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/notificationsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded3"
            android:text="Notifications"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/contactBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded3"
            android:text="Contact Support"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/shareBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded3"
            android:text="Share with friends"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/btn_rounded3"
            android:text="logout"
            android:layout_marginBottom="10dp"/>





    </LinearLayout>
</RelativeLayout>